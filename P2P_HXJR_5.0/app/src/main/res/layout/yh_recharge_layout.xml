<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/space_12"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/available_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/recharge_available"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/available"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/recharge_available"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/space_12"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bankNum_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/recharge_eleAcount"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/eleNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/recharge_eleAcount"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/space_12"
                >

                <TextView
                    android:id="@+id/notic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/recharge_input_notic"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/notic"
                    android:text="@string/recharge_input_notics"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_14"/>
            </RelativeLayout>
            <Button
                android:id="@+id/verify_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="18dp"
                android:background="@drawable/btn_main_color_big"
                android:text="@string/verify_record"
                android:textColor="@color/White"
                android:textSize="@dimen/text_size_18"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/space_12"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="*"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/recharge_fee_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/recharge_input_moneynr"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_14"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center">

                    <EditText
                        android:id="@+id/recharge_input_money"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/recharg_input_bg"
                        android:digits=".0123456789"
                        android:hint="请填写转账实际到账金额"
                        android:inputType="numberDecimal"
                        android:maxLength="12"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textColor="@color/text_black_6"
                        android:textSize="@dimen/text_size_16"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="9dp"
                        android:text="@string/yuan"
                        android:textColor="@color/text_black_6"
                        android:textSize="@dimen/text_size_16"/>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/space_12"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="*"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/verify_code_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/bank_num"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_14"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center">

                    <EditText
                        android:id="@+id/bankNum"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/recharg_input_bg"
                        android:hint="请填写转账使用的银行卡卡号"
                        android:inputType="number"
                        android:maxLength="20"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textColor="@color/text_black_6"
                        android:textSize="@dimen/text_size_16"/>

                </FrameLayout>
            </LinearLayout>



            <TextView
                android:id="@+id/warm_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="12dp"
                android:text="温馨提示："
                android:textColor="@color/text_black_6"
                android:textSize="@dimen/text_size_14"/>


            <com.dm.widgets.TouchWebView
                android:id="@+id/warm_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@color/background_bg"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>