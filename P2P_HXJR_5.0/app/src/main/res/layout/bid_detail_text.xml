<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/title_layout"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/invest_dynamic_iv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/touzi_tbz"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/bid_detail_rate_left"
                    android:layout_marginTop="@dimen/bid_detail_rate_top"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/bid_detail_rate_left">

                    <LinearLayout
                        android:layout_width="126dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/bidYearRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/White"
                            android:textSize="@dimen/text_size_25"/>

                        <TextView
                            android:id="@+id/giftRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_marginLeft="1dp"
                            android:layout_toRightOf="@id/bidYearRate"
                            android:textColor="@color/White"
                            android:textSize="@dimen/text_size_13"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="年化利率"
                        android:textColor="@color/White"
                        android:textSize="@dimen/text_size_14"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/bid_detail_limit_top"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingRight="22dp">

                    <TextView
                        android:id="@+id/bidTerms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/White"
                        android:textSize="@dimen/text_size_25"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="投资期限"
                        android:textColor="@color/White"
                        android:textSize="@dimen/text_size_14"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/bid_detail_amount_right"
                    android:layout_marginTop="@dimen/bid_detail_amount_top"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/bidAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/White"
                        android:textSize="@dimen/text_size_25"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="借款金额"
                        android:textColor="@color/White"
                        android:textSize="@dimen/text_size_14"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/bidStatus"
                    android:layout_width="@dimen/bid_status_width"
                    android:layout_height="@dimen/bid_status_width"
                    android:layout_alignBottom="@id/invest_dynamic_iv"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="投标中"
                    android:textColor="@color/White"
                    android:textSize="@dimen/text_size_14"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bid_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/icon_xin"
                    android:drawablePadding="2dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_black_3"
                    android:textSize="@dimen/text_size_15"/>

                <TextView
                    android:id="@+id/tvw_jlb_or_xsb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size_15"/>

            </LinearLayout>

            <View
                android:id="@+id/bid_detail_top_line_one"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="#eae8e5"/>

            <TextView
                android:id="@+id/bidHavenAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:text="12000元"
                android:textColor="@color/text_orange_color"
                android:textSize="@dimen/text_size_25"/>

            <TextView
                android:id="@+id/bid_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="已筹集"
                android:textColor="@color/text_black_8"
                android:textSize="@dimen/text_size_14"/>

            <TextView
                android:id="@+id/bid_publish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="6dp"
                android:textColor="@color/text_black_6"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/bid_dbjg_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="6dp"
                android:textColor="@color/text_black_6"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/bid_protect_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="6dp"
                android:textColor="@color/text_black_6"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/bid_replay_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="6dp"
                android:textColor="@color/text_black_6"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/bid_remain_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="6dp"
                android:textColor="@color/text_black_6"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="99"
                android:minHeight="6dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/arrow_xq"/>

            <LinearLayout
                android:id="@+id/pull_up_to_load_more_ll"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/after_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="后"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size_15"/>

                <TextView
                    android:id="@+id/pull_up_to_load_more_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="@string/pull_up_to_load_more"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size_15"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_10"/>

            <LinearLayout
                android:id="@+id/bottom_view"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/bottom_lc"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:text="理财计算器"
                    android:textColor="@color/main_color"/>

                <TextView
                    android:id="@+id/bottom_tz"
                    style="@style/btn_main_big"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="2"
                    android:background="@color/main_color"
                    android:gravity="center"
                    android:text="马上投资"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#c0000000">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView3"
                        android:layout_alignBottom="@+id/textView3"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/icon_xxzb"/>

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/textView4"
                        android:layout_toRightOf="@+id/textView4"
                        android:background="@drawable/icon_djmshtz"/>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textView"
                        android:layout_marginLeft="31dp"
                        android:layout_toRightOf="@+id/textView"
                        android:background="@drawable/icon_xxyb"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_mshtzs"/>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>
