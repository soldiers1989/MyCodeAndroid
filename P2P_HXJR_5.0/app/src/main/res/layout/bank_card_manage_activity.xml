<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hxjr.p2p.ad5.ui.mine.bank.BankCardManageActivity" >

    <include
        android:id="@+id/main_title"
        layout="@layout/title_layout" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/main_title" >

        <LinearLayout
            android:id="@+id/bank_card_manager_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:id="@+id/bank_card_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/space_20"
                android:background="@color/line_color"
                android:visibility="gone" />

            <com.dm.widgets.swipemenulv.SwipeMenuListView
                android:id="@+id/bank_card_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bank_card_line" >
            </com.dm.widgets.swipemenulv.SwipeMenuListView>

            <View
                android:id="@+id/bank_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/bank_card_lv"
                android:background="@color/line_color"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tip_no_card_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bank_card_line"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/space_20"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="请点击右上角,添加银行卡"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/unregist_third_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bank_card_line"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/unregist_third_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bank_card_line"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"
                    android:layout_marginTop="@dimen/space_20"
                    android:text="@string/add_card_unregist_third"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_14" />

                <Button
                    android:id="@+id/unregist_third_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/space_20"
                    android:background="@drawable/btn_main_color_big"
                    android:text="立即注册"
                    android:textColor="@color/White"
                    android:textSize="@dimen/text_size_18" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reminder_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bank_card_lv"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"
                    android:layout_marginTop="@dimen/space_20"
                    android:text="@string/wenxi_tishi"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/reminder_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"
                    android:layout_marginTop="@dimen/space_10"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>