<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <!-- 头部 -->
    <include layout="@layout/title_layout"/>
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@color/main_color">
        <LinearLayout 
            android:id="@+id/tab_btns"            
            android:layout_width="251dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/pic_tab1"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/project_list_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_size_16"
                android:text="@string/investment_xmlb"/>
            <TextView 
                android:id="@+id/creditor_list_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16"
                android:text="@string/investment_zqzr"/>
        </LinearLayout>
    </FrameLayout>    
    <android.support.v4.view.ViewPager
        android:id="@+id/invest_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">        
    </android.support.v4.view.ViewPager>
</LinearLayout>
