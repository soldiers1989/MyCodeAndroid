<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/yjq_bj"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="106dp"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="bottom|center_horizontal"
            android:text="@string/creditor_finish_date"
            android:textColor="@color/text_black_6"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/settle_time_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center_horizontal"
            android:text="@string/trade_record_time"
            android:textColor="#ff7c65"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/settle_check_contract"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/space_15"
            android:text="查看合同"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/settle_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/icon_jt3"
            android:contentDescription="@null"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/settle_invest_money_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:orientation="horizontal"
            android:paddingLeft="15dp" >

            <TextView
                android:id="@+id/settle_money_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/invest_money_symbol"
                android:textColor="@color/text_black_6"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/settle_money_value_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/space_3"
                android:text="11.00"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settle_annual_rate_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/settle_invest_money_layout"
            android:layout_marginTop="@dimen/space_10"
            android:orientation="horizontal"
            android:paddingLeft="15dp" >

            <TextView
                android:id="@+id/settle_annual_rate_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/invset_annual_rate"
                android:textColor="@color/text_black_6"
                android:textSize="@dimen/text_size_14" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/settle_annual_rate_value_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/space_3"
                    android:text="11.00"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/yearRateUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/settle_annual_rate_value_txt"
                    android:layout_toRightOf="@id/settle_annual_rate_value_txt"
                    android:gravity="bottom"
                    android:text="%"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/giftRate_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/settle_annual_rate_value_txt"
                    android:text="+18%"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_size_10" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settle_back_money_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/settle_annual_rate_layout"
            android:layout_marginTop="@dimen/space_10"
            android:orientation="horizontal"
            android:paddingLeft="15dp" >

            <TextView
                android:id="@+id/settle_back_money_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结清方式："
                android:textColor="@color/text_black_6"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/settle_back_money_value_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/space_3"
                android:text="现金/支票"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/se_make_money_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/settle_back_money_layout"
            android:layout_marginTop="@dimen/space_10"
            android:orientation="horizontal"
            android:paddingLeft="15dp" >

            <TextView
                android:id="@+id/settle_make_money_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/invest_make_money"
                android:textColor="@color/text_black_6"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/settle_make_money_value_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/space_3"
                android:text="11.00"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settle_project_name_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/se_make_money_layout"
            android:layout_marginTop="@dimen/space_10"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/space_10"
            android:paddingLeft="15dp" >

            <TextView
                android:id="@+id/settle_project_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="债权ID："
                android:textColor="@color/text_black_6"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/creditor_rights_id_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/space_3"
                android:text=""
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>