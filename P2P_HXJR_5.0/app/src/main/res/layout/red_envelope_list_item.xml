<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.66dp"
        android:background="@color/main_list_bother" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_12"
            android:src="@drawable/icon_hb" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tvw_red_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/space_13"
                    android:includeFontPadding="false"
                    android:paddingLeft="@dimen/space_12"
                    android:text="20.00"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size_20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tvw_red_money"
                    android:layout_marginLeft="@dimen/space_5"
                    android:layout_toRightOf="@+id/tvw_red_money"
                    android:paddingBottom="2.5dp"
                    android:text="元"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_12" />

                <ImageView
                    android:id="@+id/ivw_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/space_8"
                    android:background="@drawable/icon_wsy" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_12"
                android:paddingRight="@dimen/space_12" >

                <TextView
                    android:id="@+id/tvw_bid_req"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="满1000可以使用"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_12" />

                <LinearLayout
                    android:id="@+id/lly_hb_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="去出借"
                        android:textColor="@color/main_color" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_12"
                        android:src="@drawable/icon_jt3" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_12"
                android:paddingRight="@dimen/space_12" >

                <TextView
                    android:id="@+id/tvw_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="出借金额满1000赠送"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/tvw_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_gravity="right"
                    android:text="过期日期：2015-12-30"
                    android:textColor="@color/text_black_9"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_15" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.66dp"
        android:background="@color/main_list_bother" />

</LinearLayout>