<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/title_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/no_card_tip"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:text="@string/withdraw_has_no_bankcard"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_12"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/onlyOneCardLab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="16dp"
                android:text="绑定的银行卡："
                android:textColor="@color/text_black_3"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/bank_listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/space_12"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/available_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/recharge_available"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/available"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/recharge_available"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/space_12"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bankNum_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/recharge_bankNum"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/bankNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/recharge_bankNum"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/space_12"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="*"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/phoneNum_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/recharge_phoneNum"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/phoneNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/recharge_phoneNum"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/space_12"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="*"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/recharge_fee_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/recharge_input_moneyn"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_14"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center">

                    <EditText
                        android:id="@+id/amountEdit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/recharg_input_bg"
                        android:digits=".0123456789"
                        android:inputType="numberDecimal"
                        android:maxLength="12"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textColor="@color/text_black_6"
                        android:textSize="@dimen/text_size_16"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="9dp"
                        android:text="@string/yuan"
                        android:textColor="@color/text_black_6"
                        android:textSize="@dimen/text_size_16"/>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/space_12"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="*"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/verify_code_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/vercode_hint"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_14"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center">

                    <EditText
                        android:id="@+id/vercodeEdit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/recharg_input_bg"
                        android:inputType="number"
                        android:maxLength="12"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textColor="@color/text_black_6"
                        android:textSize="@dimen/text_size_16"/>

                    <Button
                        android:id="@+id/get_code_btn"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/btn_verify_status"
                        android:onClick="getVerifyCode"
                        android:paddingBottom="@dimen/space_5"
                        android:paddingTop="@dimen/space_5"
                        android:text="@string/pwd_manager_get_code"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_14"/>
                </FrameLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/recharge_fee_lab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/recharge_text_fee"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/recharge_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/recharge_fee_lab"
                    android:layout_toRightOf="@id/recharge_fee_lab"
                    android:text="0.00"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/recharge_income_lab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/recharge_fee_lab"
                    android:layout_marginTop="12dp"
                    android:text="@string/recharge_text_amount"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/recharge_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/recharge_income_lab"
                    android:layout_below="@id/recharge_fee_lab"
                    android:layout_toRightOf="@id/recharge_income_lab"
                    android:text="0.00"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size_14"/>
            </RelativeLayout>

            <Button
                android:id="@+id/btnRecharge"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="18dp"
                android:background="@drawable/btn_main_color_big"
                android:text="@string/recharge"
                android:textColor="@color/White"
                android:textSize="@dimen/text_size_18"/>
            <TextView
                android:id="@+id/warm_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="12dp"
                android:text="温馨提示："
                android:textColor="@color/text_black_6"
                android:textSize="@dimen/text_size_14" />


            <com.dm.widgets.TouchWebView
                android:id="@+id/warm_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@color/background_bg"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>