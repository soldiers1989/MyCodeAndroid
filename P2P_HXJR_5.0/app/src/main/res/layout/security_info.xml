<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/title_layout"/>
    <!-- 信用等级 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_savelvl2"
            android:textColor="#666666"
            android:textSize="@dimen/text_size_15"/>

        <LinearLayout
            android:id="@+id/account_proccessbk"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:background="@color/safe_level_back">

            <ImageView
                android:id="@+id/account_process1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/safe_level_color"
                tools:ignore="contentDescription"/>

            <ImageView
                android:id="@+id/account_process2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/safe_level_color"
                tools:ignore="contentDescription"/>

            <ImageView
                android:id="@+id/account_process3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/safe_level_color"
                tools:ignore="contentDescription"/>
        </LinearLayout>

        <TextView
            android:id="@+id/account_savelvltext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:text="@string/account_savelvl_high"
            android:textColor="#666666"
            android:textSize="@dimen/text_size_15"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffeaeaea"/>

    <!-- 实名认证 -->
    <!-- 用户姓名展示 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_identity_card"
            android:textColor="#666666"
            android:textSize="@dimen/text_size_15"/>

        <TextView
            android:id="@+id/account_shimingrenzheng"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:clickable="true"
            android:text="@string/account_has_not_set"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_size_15"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/account_namemodify"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/account_set_security"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_size_15"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/idcard_verify_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:visibility="gone">

        <EditText
            android:id="@+id/real_name_edit"
            style="@style/dm_edit_text"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="@string/account_name_tip"
            android:maxLength="10"
            android:singleLine="true"
            android:textColorHint="#dddddd"
            android:textSize="@dimen/text_size_14"/>

        <EditText
            android:id="@+id/id_card_edit"
            style="@style/dm_edit_text"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="6dp"
            android:digits="0123456789xX"
            android:hint="@string/account_input_identity_card_id"
            android:maxLength="18"
            android:singleLine="true"
            android:textColorHint="#dddddd"
            android:textSize="@dimen/text_size_14"/>

        <Button
            android:id="@+id/idcardverify_ok_btn"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="6dp"
            android:background="@color/main_color"
            android:gravity="center"
            android:text="@string/account_id_ok_btn"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffeaeaea"/>

    <!-- 绑定邮箱 -->
    <!-- 绑定邮箱展示 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_bindemail"
            android:textColor="#666666"
            android:textSize="@dimen/text_size_15"/>

        <TextView
            android:id="@+id/account_bindemail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="@string/account_has_not_set"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_size_15"/>

        <TextView
            android:id="@+id/account_emailmodify"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/account_set_security"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_size_15"
            android:visibility="visible"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/email_verify_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:visibility="gone">

        <EditText
            android:id="@+id/email_edit"
            style="@style/dm_edit_text"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="@string/account_emailtip"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textColorHint="#dddddd"
            android:textSize="@dimen/text_size_14"/>

        <Button
            android:id="@+id/email_verify_ok_btn"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="6dp"
            android:background="@color/main_color"
            android:gravity="center"
            android:text="发送验证邮件"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffeaeaea"/>

    <!-- 绑定手机 -->
    <!-- 绑定手机信息展示 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_bindphone"
            android:textColor="#666666"
            android:textSize="@dimen/text_size_15"/>

        <TextView
            android:id="@+id/account_bindphone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="@string/account_has_not_set"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_size_15"/>

        <TextView
            android:id="@+id/account_phonemodify"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/account_set_security"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_size_15"
            android:visibility="visible"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mobile_verify_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:visibility="gone">

        <EditText
            android:id="@+id/mobile_edit"
            style="@style/dm_edit_text"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="@string/account_phonenumtip"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true"
            android:textColorHint="#dddddd"
            android:textSize="@dimen/text_size_14"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/mobile_ver_edit"
                style="@style/dm_edit_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/account_input_security_code"
                android:inputType="number"
                android:maxLength="6"
                android:singleLine="true"
                android:textColorHint="#dddddd"
                android:textSize="@dimen/text_size_14"/>

            <View
                android:layout_width="12dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/mobile_ver_get_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_verify_status"
                android:gravity="center"
                android:text="@string/account_get_security_code"
                android:textColor="@color/White"/>
        </LinearLayout>

        <Button
            android:id="@+id/mobile_verify_ok_btn"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="6dp"
            android:background="@color/main_color"
            android:gravity="center"
            android:text="@string/account_id_ok_btn"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffeaeaea"/>

    <!-- 交易密码设置 -->
    <!-- 交易密码展示 -->

    <LinearLayout
        android:id="@+id/deal_pwd_ll"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_trade_pwd"
            android:textColor="#666666"
            android:textSize="@dimen/text_size_15"/>

        <TextView
            android:id="@+id/account_tradePwd_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="@string/account_has_not_set"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_size_15"/>

        <TextView
            android:id="@+id/account_tradePwd_modify"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/account_set_security"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_size_15"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tradePwd_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:visibility="gone">

        <EditText
            android:id="@+id/tradePwd_edit"
            style="@style/dm_edit_text"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:digits="@string/deal_pwd_digits"
            android:hint="@string/account_trade_pwd_tip"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textColorHint="#dddddd"
            android:textSize="@dimen/text_size_14"/>

        <EditText
            android:id="@+id/reTradePwd_edit"
            style="@style/dm_edit_text"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="6dp"
            android:digits="@string/deal_pwd_digits"
            android:hint="@string/account_trade_repwd_tip"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textColorHint="#dddddd"
            android:textSize="@dimen/text_size_14"/>

        <Button
            android:id="@+id/tradePwd_verify_ok_btn"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="6dp"
            android:background="@color/main_color"
            android:gravity="center"
            android:text="@string/account_id_ok_btn"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20"/>
    </LinearLayout>

    <View
        android:id="@+id/last_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffeaeaea"
        android:visibility="gone"/>

</LinearLayout>