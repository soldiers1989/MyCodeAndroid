<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <View
                android:id="@+id/item_top_borther"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/main_list_bother" />

            <TextView
                android:id="@+id/bidTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="14dp"
                android:singleLine="true"
                android:text="个人周转借款"
                android:textSize="@dimen/text_size_14" />

            <LinearLayout
                android:id="@+id/loan_money_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bidTitle"
                android:layout_marginTop="@dimen/space_5"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/yearRate_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9.50"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/text_size_21" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="年化利率"
                        android:textColor="@color/text_black_8"
                        android:textSize="@dimen/text_size_11" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/loaned_money_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="305.00元"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/text_size_21" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="债权价值"
                        android:textColor="@color/text_black_8"
                        android:textSize="@dimen/text_size_11" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/turn_amount_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100万元"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/text_size_21" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="转让金额"
                        android:textColor="@color/text_black_8"
                        android:textSize="@dimen/text_size_11" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/item_bottom_borther"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/main_list_bother" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/can_operation_ll"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_12" >

        <TextView
            android:id="@+id/turn_cancel_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:text="取消转让"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color" />

</LinearLayout>