<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <View
        android:id="@+id/item_top_borther"
        android:layout_width="match_parent"
        android:layout_height="0.66dp"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/letter_item_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_5"
        android:layout_marginLeft="@dimen/space_11"
        android:layout_marginRight="@dimen/space_11"
        android:layout_marginTop="@dimen/space_5" >

        <ImageView
            android:id="@+id/letter_item_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_user03"
            tools:ignore="contentDescription" />

        <TextView
            android:id="@+id/letter_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/letter_item_img"
            android:paddingLeft="@dimen/space_10"
            android:layout_marginRight="@dimen/space_20"
            android:singleLine="true"
            android:text="@string/lettler_regist_success"
            android:textColor="@color/text_black_6"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/letter_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/letter_item_title"
            android:layout_toRightOf="@id/letter_item_img"
            android:paddingLeft="@dimen/space_10"
            android:text="@string/letter_date"
            android:textColor="@color/text_black_9"
            android:textSize="@dimen/text_size_12" />

<!--         <TextView
            android:id="@+id/letter_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/letter_item_title"
            android:layout_toRightOf="@id/letter_date_tv"
            android:paddingLeft="@dimen/space_10"
            android:text="@string/letter_time"
            android:textColor="@color/text_black_9"
            android:textSize="@dimen/text_size_12" /> -->

        <ImageView
            android:id="@+id/letter_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_jt3"
            tools:ignore="contentDescription" />
    </RelativeLayout>

    <com.dm.widgets.TextViewFixTouchConsume
        android:id="@+id/letter_in_station_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/letter_item_rl"
        android:layout_marginLeft="@dimen/space_11"
        android:layout_marginRight="@dimen/space_11"
        android:paddingBottom="@dimen/space_5"
        android:text="@string/letter_modify_pwd_success"
        android:textColor="@color/text_black_6"
        android:textSize="@dimen/text_size_16"
        android:visibility="gone" />

    <View
        android:id="@+id/letter_item_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/letter_in_station_detail"
        android:background="@color/line_color"
        android:visibility="visible" />

</RelativeLayout>