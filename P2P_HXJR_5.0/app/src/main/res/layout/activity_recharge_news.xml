<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <!-- 头部 -->
    <include layout="@layout/title_layout"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@color/main_color">

        <LinearLayout
            android:id="@+id/tab_btns"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/pic_tab1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/zxcz_list_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/recharge_yhzz"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_size_16"/>

            <TextView
                android:id="@+id/yhzz_list_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/recharge_zxcz"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16"/>
        </LinearLayout>
    </FrameLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/recharge_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v4.view.ViewPager>
</LinearLayout>
