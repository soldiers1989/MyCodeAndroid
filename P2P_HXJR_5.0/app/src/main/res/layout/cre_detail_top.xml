<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/invest_dynamic_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/touzi_tbz" />

        <LinearLayout
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bid_detail_rate_left"
            android:layout_marginTop="@dimen/bid_detail_rate_top"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="4dp" >

                <TextView
                    android:id="@+id/bidYearRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/White"
                    android:textSize="@dimen/text_size_25" />

                <TextView
                    android:id="@+id/giftRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-2dp"
                    android:layout_toRightOf="@id/bidYearRate"
                    android:paddingRight="4dp"
                    android:textColor="@color/White"
                    android:textSize="@dimen/text_size_12" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年化利率"
                android:textColor="@color/White"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/bid_detail_limit_top"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="22dp" >

            <TextView
                android:id="@+id/bidTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/White"
                android:textSize="@dimen/text_size_25" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余期限"
                android:textColor="@color/White"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/bid_detail_amount_right"
            android:layout_marginTop="@dimen/bid_detail_amount_top"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bidAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/White"
                android:textSize="@dimen/text_size_25" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转让金额"
                android:textColor="@color/White"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <TextView
            android:id="@+id/bidStatus"
            android:layout_width="@dimen/bid_status_width"
            android:layout_height="@dimen/bid_status_width"
            android:layout_alignBottom="@id/invest_dynamic_iv"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/White"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <TextView
        android:id="@+id/bid_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="2dp"
        android:drawableLeft="@drawable/icon_xin"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        android:textColor="@color/text_black_3"
        android:textSize="@dimen/text_size_15" />

    <View
        android:id="@+id/bid_detail_top_line_one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="#eae8e5" />

    <TextView
        android:id="@+id/bid_dsbx_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="6dp"
        android:textColor="@color/text_black_6"
        android:textSize="@dimen/text_size_14"
        android:visibility="visible" />
    
    <TextView
        android:id="@+id/bid_syqs_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="6dp"
        android:textColor="@color/text_black_6"
        android:textSize="@dimen/text_size_14"
        android:visibility="visible" />
    
    <TextView
        android:id="@+id/bid_publish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="6dp"
        android:textColor="@color/text_black_6"
        android:textSize="@dimen/text_size_14"
        android:visibility="visible" />

    <TextView
        android:id="@+id/bid_dbjg_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="6dp"
        android:textColor="@color/text_black_6"
        android:textSize="@dimen/text_size_14"
        android:visibility="visible" />

    <TextView
        android:id="@+id/bid_protect_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="6dp"
        android:textColor="@color/text_black_6"
        android:textSize="@dimen/text_size_14"
        android:visibility="visible" />

    <TextView
        android:id="@+id/bid_replay_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="6dp"
        android:textColor="@color/text_black_6"
        android:textSize="@dimen/text_size_14"
        android:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="99"
        android:minHeight="6dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/arrow_xq" />

    <LinearLayout
        android:id="@+id/pull_up_to_load_more_ll"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/unlogin_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="@string/login"
            android:textColor="@color/text_black_6"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/after_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="后"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/pull_up_to_load_more_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/pull_up_to_load_more"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>

</LinearLayout>