<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/donation_progress_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:text="2015-10-20"
            android:textColor="@color/text_black_9"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/donation_progress_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/donation_progress_time_tv"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:text="20151014公益活动开始现在20151014公益活动开始现在20151014公益活动开始现在20151014公益活动开始现在"
            android:textColor="@color/text_black_9"
            android:textSize="@dimen/text_size_14" />

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/blue_circle" />
    </RelativeLayout>

    <View
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="13.5dp"
        android:background="@color/main_color" />

</FrameLayout>