<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <com.hxjr.p2p.ad5.ui.mine.setting.CameraSurfaceView
                android:id="@+id/cameraSurfaceView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <com.hxjr.p2p.ad5.ui.mine.setting.CameraTopRectView
                android:id="@+id/rectOnCamera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp">

            <Button
                android:id="@+id/back"
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/icon_fhback"
                android:onClick="onBack"/>

            <!--<ImageView-->
            <!--android:id="@+id/sgd_image"-->
            <!--android:layout_width="15dp"-->
            <!--android:layout_height="35dp"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:src="@drawable/icon_shgd_on"/>-->

            <!--<TextView-->
            <!--android:layout_width="180dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/sgd_image"-->
            <!--android:layout_marginTop="15dp"-->
            <!--android:text="将身份证放入框内"-->
            <!--android:gravity="center"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:background="@drawable/icon_shfzhbk"/>-->
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <Button
                android:id="@+id/takePic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50dp"
                android:background="@drawable/icon_photo"/>

            <Button

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/icon_xc"
                android:onClick="select_photo"/>


        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_selected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AA888888"
        android:visibility="gone">

        <ImageView
            android:id="@+id/selected_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="80dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            />

        <Button
            android:id="@+id/resetPhoto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/icon_photo_fh"
            android:onClick="resetPhoto"/>

        <Button
            android:id="@+id/submit_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/icon_photo_qr"
            android:onClick="submitPhoto"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/crop_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <com.dm.photo.cropper.CropImageView
                android:id="@+id/cropImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"/>
        </FrameLayout>

        <Button
            android:id="@+id/resetChoicePhoto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/icon_photo_fh"
            android:onClick="resetChoicePhoto"/>

        <Button
            android:id="@+id/affirmPhoto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/icon_photo_qr"
            android:onClick="affirmPhoto"/>
    </RelativeLayout>

</RelativeLayout>
