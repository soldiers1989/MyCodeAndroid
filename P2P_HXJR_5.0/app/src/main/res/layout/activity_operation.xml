<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="27dp"/>

        <TextView
            android:id="@+id/back_text"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/icon_fanhui"
            android:clickable="true"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:text="华西金融"
        android:textColor="@color/main_btn_bg"
        android:textSize="@dimen/text_size_22"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:layout_marginTop="@dimen/space_15"
        android:layout_weight="0.33"
        android:background="@drawable/img_ljchjje">

        <TextView
            android:id="@+id/textview_leiji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/space_18"
            android:text="累计"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20"/>

        <View
            android:layout_width="20dp"
            android:layout_height="0.66dp"
            android:layout_marginTop="@dimen/space_30"
            android:layout_toLeftOf="@+id/textview_leiji"
            android:background="@color/main_list_bother"/>

        <View
            android:layout_width="20dp"
            android:layout_height="0.66dp"
            android:layout_marginTop="@dimen/space_30"
            android:layout_toRightOf="@+id/textview_leiji"
            android:background="@color/main_list_bother"/>

        <TextView
            android:id="@+id/textview_chengjiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_leiji"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/space_16"
            android:text="成交金额(元)"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_chengjiao"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/space_16"
            android:gravity="center">

            <TextView
                android:id="@+id/ljcj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="666"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_54"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="6dp"
                android:text="万"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_yunyinbeij"
            android:layout_marginLeft="@dimen/space_40"
            android:layout_marginRight="@dimen/space_40">
        </RelativeLayout>
        <View
            android:id="@+id/item_bottom_borther"
            android:layout_width="match_parent"
            android:layout_height="0.66dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_40"
            android:layout_marginRight="@dimen/space_40"
            android:background="@color/main_list_bother"/>

        <View
            android:id="@+id/item_center_borther"
            android:layout_width="0.66dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/main_list_bother"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册总人数"
                    android:textColor="@color/op_type"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/zczrs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size_18"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/item_center_borther"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平台已安全运营"
                    android:textColor="@color/op_type"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/total_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size_18"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_bottom_borther"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本年成交金额"
                    android:textColor="@color/op_type"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bncj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size_18"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="万元"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_bottom_borther"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/item_center_borther"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计为用户赚取"
                    android:textColor="@color/op_type"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/total_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size_18"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="万元"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:gravity="center"
        android:text="-以上数据截止到2018.12.12-"
        android:textColor="@color/orange"
        android:textSize="@dimen/text_size_15"/>
</LinearLayout>
