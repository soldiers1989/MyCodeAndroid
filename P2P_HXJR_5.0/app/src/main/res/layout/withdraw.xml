<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/title_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:background="@color/main_color">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="12dp"
                    android:drawableLeft="@drawable/icon_8"
                    android:drawablePadding="2dp"
                    android:gravity="center_vertical"
                    android:text="@string/withdraw_can_get"
                    android:textColor="@color/White"
                    android:textSize="@dimen/text_size_18"/>

                <TextView
                    android:id="@+id/userAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="26dp"
                    android:text=""
                    android:textColor="@color/White"
                    android:textSize="@dimen/text_size_22"/>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/bank_listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:orientation="vertical">
            </LinearLayout>

            <TextView
                android:id="@+id/no_card_tip"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:text="@string/withdraw_has_no_bankcard"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_12"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/border_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/White"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/withdraw_amount"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_16"/>

                <EditText
                    android:id="@+id/withdraw_amount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_weight="1"
                    android:background="@color/White"
                    android:gravity="center_vertical"
                    android:hint="@string/input_withdraw_money"
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/text_color_hint"
                    android:textSize="@dimen/text_size_16"/>
            </LinearLayout>

            <TextView
                android:id="@+id/withdraw_type"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/pic_xl"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space_15"
                android:text="@string/withdraw_type"
                android:textColor="@color/text_black_6"
                android:textSize="@dimen/text_size_16"/>
            <TextView
                android:id="@+id/withdraw_type_choice"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/pic_xl"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space_15"
                android:text="@string/withdraw_type_choice"
                android:textColor="@color/text_black_6"
                android:textSize="@dimen/text_size_16"/>
            <TextView
                android:id="@+id/withdraw_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="16dp"
                android:text="@string/withdraw_fee"
                android:textColor="@color/text_black_6"
                android:textSize="@dimen/text_size_14"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="提现类型："
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/normal_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:text="正常"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_size_14"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/text_gray"/>

                <TextView
                    android:id="@+id/jiaji_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="加急"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>

            <TextView
                android:id="@+id/real_withdraw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="14dp"
                android:text="@string/real_getamount"
                android:textColor="@color/text_black_6"
                android:textSize="@dimen/text_size_14"/>

            <TextView
                android:id="@+id/getMoneyDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="14dp"
                android:text="@string/may_income_time"
                android:textColor="@color/text_black_6"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone"/>

            <Button
                android:id="@+id/withdraw_btn_ok"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="24dp"
                android:background="@drawable/btn_main_color_big"
                android:text="@string/withdraw"
                android:textColor="@color/White"
                android:textSize="@dimen/text_size_18"/>

            <TextView
                android:id="@+id/warm_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="12dp"
                android:text="温馨提示："
                android:textColor="@color/text_black_6"
                android:textSize="@dimen/text_size_14"
                android:visibility="visible"/>

            <com.dm.widgets.TouchWebView
                android:id="@+id/warm_tips"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@color/background_bg"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>