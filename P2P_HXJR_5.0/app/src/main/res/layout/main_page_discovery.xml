<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_05"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/line_color"
        android:visibility="visible" />

    <TextView
        android:id="@+id/news_tv"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/icon_discovery_01"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/icon_jt3"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="@string/discovery_news"
        android:textColor="@color/text_black_6"
        android:textSize="@dimen/text_size_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_05"
        android:layout_marginBottom="@dimen/discovery_vertical_margin"
        android:background="@color/line_color"
        android:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"
        android:visibility="gone" />

    <TextView
        android:id="@+id/commonweal_bid_tv"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/icon_discovery_02"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/icon_jt3"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="@string/discovery_commonweal_bid"
        android:textColor="@color/text_black_6"
        android:visibility="gone"
        android:textSize="@dimen/text_size_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_05"
        android:layout_marginBottom="@dimen/discovery_vertical_margin"
        android:visibility="gone"
        android:background="@color/line_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"
        android:visibility="visible" />

    <TextView
        android:id="@+id/rich_list_tv"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/icon_discovery_03"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/icon_jt3"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="@string/discovery_rich_list"
        android:textColor="@color/text_black_6"
        android:textSize="@dimen/text_size_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_05"
        android:layout_marginBottom="@dimen/discovery_vertical_margin"
        android:background="@color/line_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_05"
        android:background="@color/line_color"
        android:visibility="visible" />

    <TextView
        android:id="@+id/spread_reward_tv"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/icon_discovery_04"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/icon_jt3"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="@string/discovery_spread_reward"
        android:textColor="@color/text_black_6"
        android:textSize="@dimen/text_size_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_05"
        android:layout_marginBottom="@dimen/discovery_vertical_margin"
        android:background="@color/line_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_05"
        android:background="@color/line_color"
        android:visibility="visible" />

    <TextView
        android:id="@+id/manage_money_calculator_tv"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/icon_discovery_05"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/icon_jt3"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="@string/discovery_manage_money_calculator"
        android:textColor="@color/text_black_6"
        android:textSize="@dimen/text_size_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_05"
        android:background="@color/line_color" />

</LinearLayout>