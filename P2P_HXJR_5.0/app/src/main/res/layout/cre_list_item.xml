<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="102dp"
    android:background="@color/White">
    <View
        android:id="@+id/item_top_borther"
        android:layout_width="match_parent"
        android:layout_height="0.66dp"
        android:background="@color/main_list_bother" />
	<TextView 
	    android:id="@+id/creName"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="14dp"
	    android:layout_marginLeft="@dimen/activity_horizontal_margin"
	    android:drawableLeft="@drawable/icon_xin"
	    android:drawablePadding="4dp"
	    android:gravity="center_vertical"
	    android:layout_below="@id/item_top_borther"
	    android:textSize="@dimen/text_size_14"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/creName"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:orientation="horizontal">
	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="10"
	        android:gravity="center_horizontal"
	        android:orientation="vertical">
			<RelativeLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="8dp">
				<TextView 
				    android:id="@+id/creYearRate"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"				
			        android:textSize="@dimen/text_size_21"
			        android:textColor="@color/orange"/>
				<TextView 
				    android:id="@+id/creJlRate"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignTop="@id/creYearRate"	
				    android:layout_toRightOf="@id/creYearRate"	
				    android:layout_marginLeft="-8dp"	
			        android:textSize="@dimen/text_size_10"
			        android:textColor="@color/orange"/>
			</RelativeLayout>
			<TextView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:layout_marginBottom="8dp"
	            android:textSize="@dimen/text_size_11"
	            android:textColor="@color/text_black_8"
			    android:text="年化利率"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="10"
	        android:gravity="center_horizontal"
	        android:orientation="vertical">
			<TextView 
			    android:id="@+id/creLimit"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
		        android:textSize="@dimen/text_size_21"
		        android:textColor="@color/orange"/>
			<TextView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:layout_marginBottom="8dp"
	            android:textSize="@dimen/text_size_11"
	            android:textColor="@color/text_black_8"
			    android:text="剩余期限"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="10"
	        android:gravity="center_horizontal"
	        android:orientation="vertical">
			<TextView 
			    android:id="@+id/creAmount"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
		        android:textSize="@dimen/text_size_21"
		        android:textColor="@color/orange"/>
			<TextView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:layout_marginBottom="8dp"
	            android:textSize="@dimen/text_size_11"
	            android:textColor="@color/text_black_8"
			    android:text="转让金额"/>
	    </LinearLayout>
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:src="@drawable/pic_jt2"/>
	</LinearLayout>
    <View
        android:id="@+id/item_bottom_borther"
        android:layout_width="match_parent"
        android:layout_height="0.66dp"
        android:layout_alignParentBottom="true"
        android:background="@color/main_list_bother" />
</RelativeLayout>
