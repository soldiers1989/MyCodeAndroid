<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <View
                android:id="@+id/item_top_borther"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_05"
                android:background="@color/line_color" />

            <LinearLayout
                android:id="@+id/loan_money_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bidTypeImg"
                android:layout_marginTop="@dimen/space_5"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/yearRate_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9.50"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/text_size_21" />

                        <TextView
                            android:id="@+id/yearRateUnit_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/yearRate_tv"
                            android:layout_marginLeft="1dp"
                            android:layout_toRightOf="@id/yearRate_tv"
                            android:text="%"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/text_size_11" />

<!--                         <TextView
                            android:id="@+id/giftRate_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_toRightOf="@id/yearRate_tv"
                            android:text="+18%"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/text_size_10" /> -->
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="年化利率"
                        android:textColor="@color/text_black_8"
                        android:textSize="@dimen/text_size_11" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/periods_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/24"
                        android:textColor="@color/text_black_3"
                        android:textSize="@dimen/text_size_21" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="剩余期数"
                        android:textColor="@color/text_black_8"
                        android:textSize="@dimen/text_size_11" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/turnInBalance_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12.6元"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/text_size_21" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="盈亏"
                        android:textColor="@color/text_black_8"
                        android:textSize="@dimen/text_size_11" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/next_repayment_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/loan_money_ll"
                android:layout_marginBottom="@dimen/space_10"
                android:layout_marginTop="@dimen/space_10"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/creditor_value_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/space_20"
                    android:text="债权价值：2700.00元"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/turn_price_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/space_15"
                    android:text="转让价格：3685.16元"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/item_bottom_borther"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/space_5"
            android:background="@color/main_list_bother" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/can_operation_ll"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/check_agreement_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_15"
            android:text="查看合同"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/turn_date_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/space_15"
            android:text="转让日期：2015-11-12"
            android:textColor="@color/text_black_6"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_05"
        android:background="@color/line_color" />

</LinearLayout>