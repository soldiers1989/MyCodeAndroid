<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.66dp"
        android:background="@color/main_list_bother" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin" >

        <TextView
            android:id="@+id/periods_tv"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_20"
            android:text="第一期"
            android:textColor="@color/text_black_6"
            android:textSize="@dimen/text_size_12" />

        <View
            android:id="@+id/vir_Line"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/periods_tv"
            android:background="@color/main_color"
            android:visibility="invisible" />

        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignLeft="@id/vir_Line"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-5.5dp"
            android:background="@drawable/blue_circle" />

        <LinearLayout
            android:id="@+id/layout_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_toRightOf="@id/vir_Line"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_8"
                    android:text="偿还本息:"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/repayment_principal_and_interest_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_8"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="偿还本金:"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/repayment_principal_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_ll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_toRightOf="@id/layout_ll"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_8"
                    android:text="偿还利息:"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/repayment_interest_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_8"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="剩余本金:"
                    android:textColor="@color/text_black_6"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/remain_principal_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.66dp"
        android:background="@color/main_list_bother" />

</LinearLayout>