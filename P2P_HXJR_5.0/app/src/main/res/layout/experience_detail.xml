<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_layout" />

    <LinearLayout
        android:id="@+id/content_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:visibility="gone" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="@string/experience_lend_title"
                android:textColor="@color/text_black_6" />

            <TextView
                android:id="@+id/tvw_lend_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="2.5"
                android:text=""
                android:textColor="@color/text_black_6" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_color" 
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/lly_lend_money"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal" 
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="@string/experience_lend_money"
                android:textColor="@color/text_black_6" />

            <TextView
                android:id="@+id/tvw_lend_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="2.5"
                android:text="2000.00元"
                android:textColor="@color/orange" />
        </LinearLayout>

        <View
            android:id="@+id/l_lend_money"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffe3e0db" />

        <LinearLayout
            android:id="@+id/lly_bid_money"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="@string/experience_bid_money"
                android:textColor="@color/text_black_6" />

            <TextView
                android:id="@+id/tvw_bid_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="2.5"
                android:text="2000.00元"
                android:textColor="@color/orange" />
        </LinearLayout>

        <View
            android:id="@+id/l_bid_money"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="@string/experience_year_rate"
                android:textColor="@color/text_black_6" />

            <TextView
                android:id="@+id/tvw_year_rate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="2.5"
                android:text="15%"
                android:textColor="@color/orange" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_color" />

        <LinearLayout
            android:id="@+id/lly_income_time"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="@string/experience_income_time"
                android:textColor="@color/text_black_6" />

            <TextView
                android:id="@+id/tvw_income_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="2.5"
                android:text="一个月"
                android:textColor="@color/text_black_6" />
        </LinearLayout>

        <View
            android:id="@+id/l_income_time"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_color" />

        <LinearLayout
            android:id="@+id/lly_wait_money"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="@string/experience_wait_money"
                android:textColor="@color/text_black_6" />

            <TextView
                android:id="@+id/tvw_wait_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="2.5"
                android:text="13.22元"
                android:textColor="@color/text_black_6" />
        </LinearLayout>

        <View
            android:id="@+id/l_wait_money"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_color" />

        <LinearLayout
            android:id="@+id/lly_finish_money"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="@string/experience_finish_money"
                android:textColor="@color/text_black_6" />

            <TextView
                android:id="@+id/tvw_finish_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="2.5"
                android:text="13.22元"
                android:textColor="@color/text_black_6" />
        </LinearLayout>

        <View
            android:id="@+id/l_finish_money"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_color" />

        <LinearLayout
            android:id="@+id/lly_finish_time"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="@string/experience_finish_time"
                android:textColor="@color/text_black_6" />

            <TextView
                android:id="@+id/tvw_finish_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="2.5"
                android:text="2015-12-22"
                android:textColor="@color/text_black_6" />
        </LinearLayout>

        <View
            android:id="@+id/l_finish_time"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_color" />

        <LinearLayout
            android:id="@+id/lly_next_time"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="@string/experience_next_time"
                android:textColor="@color/text_black_6" />

            <TextView
                android:id="@+id/tvw_next_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="2.5"
                android:text="2015-12-22"
                android:textColor="@color/text_black_6" />
        </LinearLayout>

        <View
            android:id="@+id/l_next_time"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_color" />
    </LinearLayout>

    <TextView
        android:id="@+id/no_data_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="暂无数据" 
        android:textColor="@color/text_black_9"
        android:visibility="gone"/>

</LinearLayout>